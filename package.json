{
  "name": "fluant",
  "version": "1.0.0",
  "description": "fluant - The new and smart way to learn a language",
  "main": "index.js",
  "scripts": {
    "build-client": "cd client && npm run build",
    "build-storybook": "cd client && npm run build-storybook",
    "build": "npm run build-storybook && npm run build-client",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "storybook": "cd client && npm run storybook",
    "test": "cd client && npm test",
    "postinstall": "cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tobihoff/fluant.git"
  },
  "author": "Tobias Hoffmann",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tobihoff/fluant/issues"
  },
  "homepage": "https://github.com/tobihoff/fluant#readme",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "config": "^3.2.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.4.0",
    "mongoose": "^5.8.2"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.17.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  }
}
